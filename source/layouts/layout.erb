<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport"
  content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title><%= current_page.data.title || "Middleman" %></title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <%= stylesheet_link_tag "site" %>
  <%= javascript_include_tag "site" %>
</head>
<body>
  <%= yield %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>

  <script type="text/javascript">
    const i1 = document.getElementById("img1"),
      i2 = document.getElementById("img2"),
      i3 = document.getElementById("img3"),
      i4 = document.getElementById("img4"),
      s1 = document.getElementById("slider1"),
      s2 = document.getElementById("slider2"),
      s3 = document.getElementById("slider3"),
      s4 = document.getElementById("slider4"),
      s5 = document.getElementById("slider5"),
      btn = document.getElementById("btn-treehouse")
      tl = new TimelineLite();

    tl.from(i1, 1, {autoAlpha:0})
    .from(s1, 0.5, {autoAlpha: 0})
    .from(s2, 0.5, {autoAlpha: 0})
    .to(s1, 0.5, {x: +364, autoAlpha: 0})
    .to(s2, 0.5, {x: -364, autoAlpha: 0})

    .from(i2, 1, {autoAlpha:0})
    .from(s3, 0.5, {autoAlpha: 0})
    .to(s3, 2, {x: +364, autoAlpha: 0})

    .from(i3, 1, {autoAlpha:0})
    .from(s4, 0.5, {autoAlpha: 0})
    .from(s5, 0.5, {autoAlpha: 0})
    .to(s4, 0.5, {x: -364, autoAlpha: 0})
    .to(s5, 0.5, {x: +364, autoAlpha: 0})

    .from(i4, 1, {autoAlpha:0})
    .from(btn, 1, {top: 0, autoAlpha: 0});
  </script>
</body>
</html>
