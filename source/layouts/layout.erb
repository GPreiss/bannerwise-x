    // const timeline = new TimelineMax({repeat:-1});
    // timeline.append(TweenMax.staggerTo(images, 1, {css:{autoAlpha:1}, repeat:1, yoyo:true, repeatDelay:.5}, 2.5));

  </script>
</body>
</html>
