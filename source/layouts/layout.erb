<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport"
  content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Use the title from a page's frontmatter if it has one -->
  <title><%= current_page.data.title || "Middleman" %></title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <%= stylesheet_link_tag "site" %>
  <%= javascript_include_tag "site" %>
</head>
<body>
  <%= yield %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>

  <script type="text/javascript">

    const tl = new TimelineLite();
    const i1 = document.getElementById("img1");
    const i2 = document.getElementById("img2");
    const i3 = document.getElementById("img3");
    const i4 = document.getElementById("img4");
    const s1 = document.getElementById("slider1");
    const s2 = document.getElementById("slider2");
    const s3 = document.getElementById("slider3");
    const s4 = document.getElementById("slider4");
    const s5 = document.getElementById("slider5");
    // const w1 = document.getElementById("wds1");
    // const w2 = document.getElementById("wds2");
    // const w3 = document.getElementById("wds3");
    // const w4 = document.getElementById("wds4");
    // const w5 = document.getElementById("wds5");

    const btn = document.getElementById("btn-treehouse");

    tl.from(i1, 1, {autoAlpha:0})
    .from(s1, 1, {autoAlpha: 0})
    .from(s2, 1, {autoAlpha: 0})
    .to(s1, 1, {x: +364, autoAlpha: 0})
    .to(s2, 1, {x: -364, autoAlpha: 0})

    .from(i2, 1, {autoAlpha:0})
    .from(s3, 1, {autoAlpha: 0})
    .to(s3, 2, {x: +364, autoAlpha: 0})

    .from(i3, 1, {autoAlpha:0})
    .from(s4, 1, {autoAlpha: 0})
    .from(s5, 1, {autoAlpha: 0})
    .to(s4, 1, {x: -364, autoAlpha: 0})
    .to(s5, 1, {x: +364, autoAlpha: 0})

    .from(i4, 1, {autoAlpha:0})
    .from(btn, 1, {top: 0, autoAlpha: 0}, "stagger");


    // tl.seek("stagger");
